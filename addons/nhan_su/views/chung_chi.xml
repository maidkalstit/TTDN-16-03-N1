<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Form View -->
        <record id="view_chung_chi_form" model="ir.ui.view">
            <field name="name">chung_chi.form</field>
            <field name="model">chung_chi</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <div class="oe_read_only" style="font-size:20px">Chứng chỉ</div>
                        <group col="4">
                            <field name="nhan_vien_id"/>
                            <field name="ten_chung_chi"/>
                            <field name="noi_cap"/>
                            <field name="ngay_cap"/>
                            <field name="ngay_het_han"/>
                            <field name="hinh_anh" widget="image"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- Tree View -->
        <record id="view_chung_chi_tree" model="ir.ui.view">
            <field name="name">chung_chi.tree</field>
            <field name="model">chung_chi</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="nhan_vien_id"/>
                    <field name="ten_chung_chi"/>
                    <field name="noi_cap"/>
                    <field name="ngay_cap"/>
                    <field name="ngay_het_han"/>
                </tree>
            </field>
        </record>

        <!-- Action -->
        <record id="action_chung_chi" model="ir.actions.act_window">
            <field name="name">Chứng chỉ</field>
            <field name="res_model">chung_chi</field>
            <field name="view_mode">tree,form</field>
        </record>
    </data>
</odoo>